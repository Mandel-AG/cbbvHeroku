<html>
<head>
  <title>Mon title</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
  <button id='retour' class="btn btn-dark" type="button"> Retour </button> 
  <div class="container-fluid">
    <div class="d-flex flex-column align-items-center justify-content-center w-100" style="height:100vh;">
      <h1> Ajouter une Equipe </h1>

      <form class="d-flex flex-column card w-50" method="post" action="/teams" enctype="multipart/form-data" >
        <div class="card-body">
          
          <div class="form-group">
            <label>Nom</label>
            <input name="name" class="form-control" type="text" />
          </div>

          <div class="form-group">
            <label>liste des membres</label>
            <textarea name="memberList" class="form-control" type="text">
            </textarea>
          </div>


          <div class="form-group">
            <label>Horaire</label>
            <textarea name="schedule" class="form-control" type="text">
            </textarea>
          </div>

          <div class="form-group">
            <label>Prix</label>
            <input name="price" class="form-control" type="text" />
          </div>

          <div class="form-group" id="testdiv">
            <label>Liste des matchs</label>
            <!-- <textarea name="games" class="form-control" type="text">
            </textarea> -->
            <ul  id="testul">
              <li><input name="games" class="form-control" type="text" /></li>
            </ul>

            <button id="testbutton" type="button"> Ajouter un input</button>            
          </div>

          <div class="form-group">
            <label>Picture</label>
            <input name="file" class="form-control" type="file" />
          </div> 

          <div>
            <input type="submit" value="Submit" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="/javascript/retour.js" ></script>
  <script type="text/javascript" src="/javascript/addteam.js" ></script>
</body>
</html>